
<h5>Leave a message in our chatroom</h5>
<div class="chat-window" style="border:1px solid black">
  <table class='centered'>
    <thead>
      <tr>
        <th>Messages</th>
        <th>User</th>
        <th>Time posted</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody class="chat-reload">
      <% @chats.each do |chat| %>
        <tr>
          <td><%= chat.messages %></td>
          <td><%= chat.user.username %></td>
          <td><%= chat.created_at %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<div class="container">
  <%= render 'form' %>
</div>
